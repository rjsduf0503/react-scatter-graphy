  },
  "bugs": {
    "url": "https://github.com/rjsduf0503/react-scatter-graphy/issues",
    "email": "rjsduf0503@gmail.com"
  },
  "homepage": "https://github.com/rjsduf0503/react-scatter-graphy",
  "scripts": {
